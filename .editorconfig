# http://editorconfig.org

root = true


# javascript files
[*]
charset = utf-8
indent_style = space
indent_size = 2
continuation_indent_size = 2
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
spaces_around_operators = true
spaces_around_brackets = true

[*.html]
insert_final_newline = false
